<html>

  <head>
    <title>Cool ToDo List</title>
    <link rel="stylesheet" type="text/css" href="to_do.css">
    <meta charset="utf-8">
  </head>

  <body>
    <% @list.each do |item| %>
    <ul class="task_list">
      <li> <%= item %> </li>
    </ul>
    <form action="/done_task" method="post">
      <input type="hidden" name="">
      <input type="submit" name="remove_task" value="done">
    </form>
    <% end %>

    <form action="/add_new" method="post">
      <input type="text" name="new_task" placeholder="I have to...">
      <input class="add_button" type="submit" name="submit" value="Add">
    </form>


  </body>

</html>